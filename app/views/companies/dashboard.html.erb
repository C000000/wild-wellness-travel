<div class="container">
  <h1 class="text-center"><%= @company.name %> Dashboard</h1>
  <hr>
  <div class="row">
    <div class="col-xs-12 col-sm-3">
      <ul class="dashboard-menu">
        <li>
          <a class="dashboard-btn active" data-target="#retreat-list">Retreats</a>
        </li>
        <li>
          <a class="dashboard-btn" data-target="#booking-list">Bookings</a>
        </li>
        <li>
          <a class="dashboard-btn" data-target="#completed-bookings">Completed</a>
        </li>
        <hr>
        <li>
          <a class="dashboard-btn dashboard-green-btn" data-target="#new-retreat">Add New Retreat</a>
        </li>
        <li>
          <a class="dashboard-btn dashboard-green-btn" data-target="#edit-company-details">Edit Company Details</a>
        </li>
      </ul>
    </div>
    <div class="col-xs-12 col-sm-9">
      <div class="dashboard-results">
        <div id="retreat-list" class="dashboard-content">
          <% if @company.retreats.first %>
          <% @company.retreats.each do |ret| %>
          <%= render 'retreats/retreat_card', retreat: ret %>
          <% end %>
          <% end %>
        </div>
        <div id="booking-list" class="dashboard-content">
          <h1>BOOKINGS</h1>
        </div>
        <div id="completed-bookings" class="dashboard-content">
          <h1>COMPLETED</h1>
        </div>
        <div id="new-retreat" class="dashboard-content">
          <%= render 'retreats/new_retreat_form', retreat: @retreat %>
        </div>
        <div id="edit-company-details" class="dashboard-content">
          <%= render 'edit_company_form', company: @company %>
        </div>
      </div>
    </div>
  </div>
</div>
