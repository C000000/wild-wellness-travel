<div class="navbar-wwt">
  <!-- Left Side -->
  <div class="navbar-wwt-left hidden-xs hidden-sm">
    <%= link_to (image_tag "wwt_logo.jpg", class: "wwt-logo"), root_path %>
  </div>

  <!-- Right Navigation -->
  <div class="navbar-wwt-right hidden-xs hidden-sm">

    <!-- Search form -->
    <form action="" class="navbar-wwt-search">
      <input type="text" class="navbar-wwt-search-input" placeholder="SEARCH">
      <button type="submit" class="navbar-wwt-search-btn">
        <i class="fa fa-search"></i>
      </button>
    </form>

    <!-- Pages -->
    <%= link_to "Services", root_path, class: "navbar-wwt-item navbar-wwt-link" %>
    <%= link_to "Preferred Wellness Experiences", root_path, class: "navbar-wwt-item navbar-wwt-link" %>
    <%= link_to "Reatreat Planning", retreats_path, class: "navbar-wwt-item navbar-wwt-link  #{cp(retreats_path)}" %>
    <% if user_signed_in? && current_user.company %>
    <%= link_to "Business Dashboard", company_dashboard_path, class: "navbar-wwt-item navbar-wwt-link #{cp(company_dashboard_path)}" %>
    <% else %>
    <%= link_to "Become a seller?", new_company_path, class: "navbar-wwt-item navbar-wwt-link #{cp(new_company_path)}" %>
    <% end %>
    <%= link_to "Contact", root_path, class: "navbar-wwt-item navbar-wwt-link" %>

    <!-- Different navigation if login or not -->
    <% if user_signed_in? %>

    <!-- Notification -->
    <%= link_to "#", class: "navbar-wwt-item navbar-wwt-link" do %>
    <div class="badge-container">
      <i class="fa fa-envelope-o"></i>
      <div class="badge badge-blue">3</div>
    </div>
    <% end %>

    <!-- Profile picture and dropdown -->
    <div class="navbar-wwt-item">
      <div class="dropdown">
        <% if current_user.profile_picture? %>
        <%= cl_image_tag current_user.profile_picture.path, class: "avatar dropdown-toggle", id: "navbar-wwt-menu", "data-toggle" => "dropdown" %>
        <% else %>
        <%= image_tag current_user.facebook_picture_url || "image_placeholder.png", class: "avatar dropdown-toggle", id: "navbar-wwt-menu", "data-toggle" => "dropdown" %>
        <% end %>
        <ul class="dropdown-menu dropdown-menu-right navbar-wwt-dropdown-menu">
          <li>
            <%= link_to edit_user_registration_path do %>
            <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
            <% end %>
          </li>
          <li>
            <%= link_to root_path do %>
            <i class="fa fa-home"></i>  <%= t(".profile", default: "Home") %>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>

    <% else %>

    <!-- Login Sign up text link -->
    <%= link_to t(".sign_up", default: "Sign up"), new_user_registration_path , class: "navbar-wwt-item navbar-wwt-btn" %>
    <%= link_to t(".sign_in", default: "Log in"), new_user_session_path, class: "navbar-wwt-item navbar-wwt-btn" %>

    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wwt-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wwt-dropdown-menu">
        <li>
          <%= link_to "home", root_path %>
        </li>
        <li>
          <%= link_to "Services", root_path %>
        </li>
        <li>
          <%= link_to "Preferred Wellness Experiences", root_path %>
        </li>
        <li>
          <%= link_to "Reatreat Planning", retreats_path %>
        </li>
        <li>
          <%= link_to "Contact", root_path %>
        </li>
        <hr>

        <% if user_signed_in? %>
        <% if current_user.company %>
        <li>
          <%= link_to "Business Dashboard", company_dashboard_path %>
        </li>
        <% else %>
        <li>
          <%= link_to "Become a seller?", new_company_path %>
        </li>
        <% end %>
        <li>
          <%= link_to edit_user_registration_path do %>
          <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
          <% end %>
        </li>
        <li>
          <%= link_to destroy_user_session_path, method: :delete do %>
          <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
          <% end %>
        </li>
        <% else %>
        <li>
          <%= link_to t(".sign_up", default: "Sign up"), new_user_registration_path %>
        </li>
        <li>
          <%= link_to t(".sign_in", default: "Log in"), new_user_session_path %>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

