<div class="card-layout">
  <%= cl_image_tag retreat.pictures.last.path, size: '500x250', crop: :thumb, gravity: :center, class: "card-image" if retreat.pictures.first %>
  <div class="card-location">
    <span><i class="fa fa-map-marker" aria-hidden="true"></i></span>
    <%= "#{retreat.city}, #{retreat.country}" %>
  </div>
  <div class="card-price">
    <%= "#{retreat.price.to_i}$" %>
  </div>
  <div class="card-name">
    <%= retreat.name %>
  </div>
  <div class="card-rating">
    <% rating = retreat.reviews.average(:rating) %>
    <span class="stars"><%= rating.nil? ? 0 : rating %></span>
  </div>
  <!-- For company dashboard -->
  <% if current_page?(company_dashboard_path) %>
  <div class="card-links company-links">
    <div>
      <%= link_to "Edit", edit_retreat_path(retreat), class: "btn btn-info" %>
      <%= link_to "Delete", retreat_path(retreat), method: :delete, data: {confirm: 'Are you sure?' }, class: "btn btn-danger" %>
    </div>
  </div>
  <% elsif current_page?(retreats_path) %>
    <%= link_to "#", retreat_path(retreat), class: "card-link" %>
  <% end %>
  <div class="card-background-color"></div>
</div>
