<%= simple_form_for retreat do |f| %>
<%= f.input :pictures, as: :attachinary, label: "Pictures (last uploaded will be a card cover picture)" %>
<div class="inline-fields">
<%= f.input :name %>
<%= f.input :price %>
</div>
<div class="inline-fields">
<%= f.input :phone_number %>
<%= f.input :email %>
</div>
<div class="inline-fields">
<%= f.input :country, priority: ["United States"] %>
<%= f.input :state %>
<%= f.input :city %>
</div>
<%= f.input :street_address %>
<%= f.input :video %>
<%= f.input :description %>
<div class="text-center">
<%= f.button :submit, "Preview & Update", class: "btn btn-primary" %>
<%= link_to "Back", company_dashboard_path, class: "btn btn-danger" %>
</div>
<% end %>