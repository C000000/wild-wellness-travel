<div class="container">
	<div class="row">
		<div class="col-xs-12 col-sm-6">
			<h3 class="text-center">Card Preview</h3>
			<%= render 'retreat_card', retreat: @retreat %>	
			<h3 class="text-center">Map Preview</h3>
			<div id="map"></div>
		</div>
		<div class="col-xs-12 col-sm-6">
			<h3 class="text-center">Retreat Details</h3>
			<%= render 'retreat_form', retreat: @retreat %>	
		</div>
	</div>
</div>

<% content_for(:after_js) do %>
<script>
	$(document).ready(function() {
		handler = Gmaps.build('Google');
		handler.buildMap({ internal: {id: 'map'}}, function(){
			markers = handler.addMarkers([
			{
				lat: <%= @retreat.latitude %>,
				lng: <%= @retreat.longitude %>,
				infowindow: "<%= @retreat.street_address %>"
			}
			]);
			handler.bounds.extendWith(markers);
			handler.fitMapToBounds();
			handler.getMap().setZoom(15);
		});
	});
</script>
<% end %>
