<div class="devise-container">
	<div class="devise-form">
		<h2 class="text-center">Log in</h2>
		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <%= link_to omniauth_authorize_path(resource_name, :facebook),
    class: 'btn facebook-btn' do %>
    <span class="fa fa-facebook"></span>
    <p>Sign in with Facebook</p>
    <% end %>
    <%= link_to omniauth_authorize_path(resource_name, :google_oauth2),
    class: 'btn facebook-btn google-btn' do %>
    <span class="fa fa-google"></span>
    <p>Sign in with Google</p>
    <% end %>
		<div class="form-inputs">
			<%= f.input :email, required: false, autofocus: true %>
			<%= f.input :password, required: false %>
			<%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
		</div>

		<div class="form-actions text-center">
		<%= f.button :submit, "Log in", class: "login-btn" %>
		<br>
		<%= link_to "Forgot your password?", new_password_path(resource_name) %>
		</div>
		<% end %>
	</div>
</div>
